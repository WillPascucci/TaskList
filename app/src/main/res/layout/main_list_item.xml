<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:layout_height="40dp">


    <ImageButton
        android:id="@+id/button_finish"
        android:src="@drawable/ic_action_done"
        android:background="#0000"
        android:layout_margin="5dp"
        android:layout_height="25dp"
        android:maxHeight="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content" />

    <ImageButton
        android:id="@+id/button_close"
        android:src="@drawable/ic_action"
        android:background="#0000"
        android:layout_margin="5dp" android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content" />
<!--
    <ImageButton
        android:id="@+id/button_delay"
        android:src="@drawable/ic_action_alarm"
        android:background="#0000"
        android:layout_margin="5dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/button_close"
        android:layout_toStartOf="@id/button_close"
        android:layout_width="wrap_content" />

     <ImageButton
        android:id="@+id/button_pause"
        android:src="@drawable/ic_av_pause"
        android:background="#0000"
        android:layout_margin="5dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/button_delay"
        android:layout_toStartOf="@id/button_delay"
        android:layout_width="wrap_content" />
-->
    <ImageButton
        android:id="@+id/button_play"
        android:src="@drawable/ic_av_play_arrow"
        android:background="#0000"
        android:layout_margin="5dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/button_close"
        android:layout_toStartOf="@id/button_close"
        android:layout_width="wrap_content" />

    <Chronometer
        android:id="@+id/chrono"
        android:layout_toLeftOf="@id/button_play"
        android:layout_toStartOf="@id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:gravity="center"/>

    <TextView
        style="@style/Detail_InfoViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="35dp"
        android:textSize="25dp"
        android:text="List Item"
        android:layout_toRightOf="@id/button_finish"
        android:layout_toEndOf="@id/button_finish"
        android:layout_toLeftOf="@id/button_play"
        android:layout_toStartOf="@id/button_play"
        android:gravity="center_vertical"
        android:id="@+id/textView" />

</RelativeLayout>